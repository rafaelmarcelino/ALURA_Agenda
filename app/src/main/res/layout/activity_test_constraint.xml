<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/activity_test_constraint_iv"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:background="@color/purple_500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"/>

    <TextView
        android:id="@+id/activity_test_constraint_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Registered Students"
        android:textSize="24sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/activity_test_constraint_tv_name_school"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        android:text="Atilio Tognato"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/activity_test_constraint_tv_title"
        app:layout_constraintTop_toBottomOf="@+id/activity_test_constraint_tv_title" />

    <ListView
        android:id="@+id/activity_test_constraint_lv_students"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_test_constraint_iv"
        app:layout_constraintVertical_bias="0.0"
        tools:listitem="@layout/cell_constraint_lv_students"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/activity_test_constraint_fab_add_student"
        app:layout_constraintStart_toStartOf="@id/activity_test_constraint_lv_students"
        app:layout_constraintEnd_toEndOf="@id/activity_test_constraint_lv_students"
        app:layout_constraintTop_toTopOf="@id/activity_test_constraint_lv_students"
        app:layout_constraintBottom_toBottomOf="@id/activity_test_constraint_lv_students"
        app:layout_constraintVertical_bias="0.95"
        app:layout_constraintHorizontal_bias="0.95"
        android:src="@drawable/ic_action_add_student"
        android:backgroundTint="@color/purple_500"
        app:tint="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />

</androidx.constraintlayout.widget.ConstraintLayout>