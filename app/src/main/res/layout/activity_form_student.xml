<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:id="@+id/activity_form_student_constraint_sv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/activity_form_student_constraint_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/activity_form_student_et_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/activity_form_student_constraint_cl"
                app:layout_constraintEnd_toEndOf="@id/activity_form_student_constraint_cl"
                app:layout_constraintTop_toTopOf="@id/activity_form_student_constraint_cl"
                app:layout_constraintBottom_toBottomOf="@id/activity_form_student_constraint_cl"
                app:layout_constraintVertical_bias="0"
                android:layout_margin="8dp"
                android:hint="Name"
                android:inputType="textCapWords"/>

            <EditText
                android:id="@+id/activity_form_student_et_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:hint="Phone"
                android:inputType="phone"
                app:layout_constraintBottom_toBottomOf="@id/activity_form_student_constraint_cl"
                app:layout_constraintEnd_toEndOf="@id/activity_form_student_constraint_cl"
                app:layout_constraintStart_toStartOf="@id/activity_form_student_constraint_cl"
                app:layout_constraintTop_toBottomOf="@id/activity_form_student_et_name"
                app:layout_constraintVertical_bias="0"/>

            <EditText
                android:id="@+id/activity_form_student_et_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:inputType="textEmailAddress"
                android:hint="Email"
                app:layout_constraintStart_toStartOf="@id/activity_form_student_constraint_cl"
                app:layout_constraintEnd_toEndOf="@id/activity_form_student_constraint_cl"
                app:layout_constraintTop_toBottomOf="@id/activity_form_student_et_phone"
                app:layout_constraintBottom_toBottomOf="@id/activity_form_student_constraint_cl"
                app:layout_constraintVertical_bias="0"/>

            <EditText
                android:id="@+id/activity_form_student_et_age"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:inputType="number"
                android:hint="Age"
                app:layout_constraintStart_toStartOf="@id/activity_form_student_constraint_cl"
                app:layout_constraintEnd_toEndOf="@id/activity_form_student_constraint_cl"
                app:layout_constraintTop_toBottomOf="@id/activity_form_student_et_email"
                app:layout_constraintBottom_toBottomOf="@id/activity_form_student_constraint_cl"
                app:layout_constraintVertical_bias="0"/>

                 <RadioGroup
                     android:id="@+id/activity_form_student_rg_gender"
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal"
                     app:layout_constraintStart_toStartOf="@id/activity_form_student_constraint_cl"
                     app:layout_constraintEnd_toEndOf="@id/activity_form_student_constraint_cl"
                     app:layout_constraintTop_toBottomOf="@id/activity_form_student_et_age"
                     app:layout_constraintBottom_toBottomOf="@id/activity_form_student_constraint_cl">

                     <RadioButton
                         android:id="@+id/activity_form_student_rb_male"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="MALE"
                         android:layout_weight="0.5"
                         android:layout_marginStart="100dp"
                         android:checked="true"/>

                     <RadioButton
                         android:id="@+id/activity_form_student_rb_female"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_marginEnd="100dp"
                         android:layout_weight="0.5"
                         android:text="FEMALE"/>
                 </RadioGroup>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>