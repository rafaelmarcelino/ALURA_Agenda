<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.cardview.widget.CardView
            android:id="@+id/cell_constraint_cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="8dp"
            app:cardCornerRadius="10dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/cell_constraint_iv_photo_student"
                            android:layout_height="100dp"
                            android:layout_width="100dp"
                            android:paddingTop="10dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_margin="5dp"
                            android:src="@drawable/female_avatar"
                            android:scaleType="fitStart"
                            app:layout_constraintHorizontal_bias="0"
                            app:layout_constraintVertical_bias="0"/>

                        <TextView
                            android:id="@+id/cell_constraint_tv_name_student"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Name"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            app:layout_constraintStart_toEndOf="@+id/cell_constraint_iv_photo_student"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/cell_constraint_iv_photo_student"
                            app:layout_constraintBottom_toBottomOf="@id/cell_constraint_iv_photo_student"
                            app:layout_constraintVertical_bias="0.2"
                            app:layout_constraintHorizontal_bias="0.05"/>

                        <TextView
                            android:id="@+id/cell_constraint_tv_phone_student"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Phone"
                            android:textSize="16sp"
                            app:layout_constraintStart_toEndOf="@+id/cell_constraint_iv_photo_student"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/cell_constraint_tv_name_student"
                            app:layout_constraintHorizontal_bias="0.05"
                            />
                        <TextView
                            android:id="@+id/cell_constraint_tv_email_student"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Email"
                            android:textSize="16sp"
                            app:layout_constraintStart_toEndOf="@+id/cell_constraint_iv_photo_student"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/cell_constraint_tv_phone_student"
                            app:layout_constraintHorizontal_bias="0.05"
                            />
                        <TextView
                            android:id="@+id/cell_constraint_tv_age_student"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Age"
                            android:textSize="16sp"
                            app:layout_constraintStart_toEndOf="@+id/cell_constraint_tv_name_student"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/cell_constraint_tv_name_student"
                            app:layout_constraintBottom_toBottomOf="@+id/cell_constraint_tv_email_student"
                            app:layout_constraintHorizontal_bias="0.8"
                            />

                        <View
                            android:id="@+id/cell_constraint_view_divider"
                            android:layout_width="0dp"
                            android:layout_height="3dp"
                            android:background="@android:color/holo_blue_dark"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/cell_constraint_iv_photo_student"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintVertical_bias="0"
                            />
                </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>